<idea-plugin>
    <id>com.github.yuchuangu85.layoutinspectorv2max</id>
    <name>LayoutInspectorV2-Max</name>
    <vendor url="https://www.codemx.cn">CodeMx</vendor>

    <depends>com.intellij.modules.compose</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.modules.androidstudio</depends>

    <resource-bundle>messages.ComposeTemplateBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="org.jetbrains.plugins.template.toolWindow.ComposeSamplesToolWindowFactory"
                    icon="org.jetbrains.plugins.template.ComposeIcons.ComposeToolWindow"
                    id="ComposeSamples"/>
    </extensions>
    <actions>
        <action id="org.jetbrains.plugins.template.action.AndroidRunLayoutInspectorAction"
                class="org.jetbrains.plugins.template.action.AndroidRunLayoutInspectorAction"
                text="LayoutInspectorV2 Max"
                description="LayoutInspectorV2 Max">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
